/* pages/todolist/todolist.wxss */
.event-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-btn {
  font-size: 15px;
  margin-right: 10px;
  width:60px !important;
  border: 1px solid #ccc;
  text-align: center;
  height: 30px;
  line-height: 30px;
  border-radius: 30px;
}

.event-input {
  flex: 1;
  border: 1px solid #bbb;
  border-radius: 20px;
  margin: 0 5px;
  height: 30px;
  padding-left: 10px;
}

.list-container {
  padding: 10px;
  font-size: 15px;
}

.list-item {
  display: flex;
  align-items: center;
  height: 30px;
  margin-bottom: 3px;
}

.desc {
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin-left: 5px;
}

.desc-completed {
  text-decoration: line-through;
  color: #ccc;
}
.btn {
  font-size: 12px;
  min-width: 51px;
  text-align: center;
}
.delete {
  border: 1px solid black;
  border-radius: 20px;
  color: black;
  padding: 2px 4px;
  margin-left: 5px;
}

.completed {
  border-radius: 20px;
  color: green;
  border: 1px solid green;
  padding: 2px 4px;
}

.un-completed {
  border-radius: 20px;
  border: 1px solid red;
  color: red;
  padding: 2px 4px;
}